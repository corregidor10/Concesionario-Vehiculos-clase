@model IEnumerable<Concesionario_Vehiculos_clase.Models.Vehiculo>

@{
    int n = 0;
}

@foreach (var item in Model)
{
    if (n%3 == 0)
    {
        @Html.Raw("<div class=\"row\">")
    }
    <div class="col-md-4">

        <h2> @item.Matricula</h2>
        <h3>@item.Marca @item.Modelo</h3>
        <p> @item.Precio</p>

    </div>
    if (++n%3 == 0 || n == Model.Count())
    {
        @Html.Raw("</div>")
    }
}

