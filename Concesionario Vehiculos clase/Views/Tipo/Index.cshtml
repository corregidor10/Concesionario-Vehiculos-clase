@model IEnumerable<Concesionario_Vehiculos_clase.Models.Tipo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Alta", "Alta")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreTipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionTipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreTipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionTipo)
        </td>
        <td>@Html.ActionLink("Vehiculos", "Index", "Vehiculo", new {id = item.IdTipo}, null)</td>
        @*cuando queremos hacer una accion hacia otro controlador
         se incluye a continuación de la accion*@

    </tr>
}

</table>
